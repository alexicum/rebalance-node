{
  "name": "cra-rest-node",
  "version": "1.0.0",
  "description": "create-react-app + Node API on Heroku",
  "engines": {
    "node": "8.12.x"
  },
  "scripts": {
    "start": "node --experimental-modules server/index.mjs",
    "heroku-postbuild": "cd react-ui/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "express": "^4.16.3"
  },
  "repository": {
    "type": "git",
    "url": "github:alexicum/cra-rest-node"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {}
}
